{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"lib": ["ESNext"],
		"outDir": "dist",
		"allowJs": false,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"importsNotUsedAsValues": "error"
	},
	"exclude": ["../../node_modules"],
	"include": ["src"]
}
